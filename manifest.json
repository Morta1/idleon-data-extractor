{
  "name": "idleon-data-extractor",
  "description": "Extract data from legends of idleon and transform it to a readable JSON",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "*://*.legendsofidleon.com/*",
    "*://firestore.googleapis.com/*",
    "*://localhost:*/*",
    "*://morta1.github.io/*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/Golden_Plop.png",
    "48": "assets/Golden_Plop.png",
    "128": "assets/Golden_Plop.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.legendsofidleon.com/*"
      ],
      "js": [
        "src/inject.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "minimum_chrome_version": 92,
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected.js"
      ],
      "matches": [
        "*://*.legendsofidleon.com/*"
      ]
    }
  ]
}
